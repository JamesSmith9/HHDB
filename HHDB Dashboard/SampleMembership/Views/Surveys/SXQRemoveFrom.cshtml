@model SampleMembership.Models.Survey

@{
    ViewBag.Title = "SXQRemove Form";
}

<br />
<br />

<h2>@Model.Name</h2>

<br />
<br />
<br />

@foreach (var item in Model.SurveyQuestions)
{
    @item.QText
    <br />
}

<br />
<br />
<br />



@using (Html.BeginForm("SXQRemove", "Surveys", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <form>

        Select a question to remove: <br />
        @Html.DropDownList("qRemove", Model.SurveyQuestions.Select(x => new SelectListItem { Text = x.QText, Value = x.QuestionID.ToString() }))
        <br />
        <button>Remove</button>
        @Html.HiddenFor(m => m.SurveyID)
    </form>
}
